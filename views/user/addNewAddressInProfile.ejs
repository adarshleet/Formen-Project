<%- include('./head.ejs') %>
        <link rel="stylesheet" href="/css/address.css">
        <title>address</title>
            </head>
            <body>
                <section class="row justify-content-center align-items-center mx-4 vh-100">
                    <div class="container-fluid">
                        <div class="row justify-content-center">
                            <div class="row justify-content-center col-sm-6 text-center text-black">
                                <div class="d-flex align-items-center justify-content-center">
                                    <form class="main-form form-control py-4" method="post" action="/addNewAddresses" style="width: 30rem;">
                                        <h5 class="login-title text-start ms-4">NEW ADDRESS</h5>
                                        <div class="form-outline mb-3 mx-3">
                                            <input type="text" name="name" placeholder="Name" class="form-control login-input">
                                        </div>
                                        <div class="form-outline mb-3 mx-3">
                                            <input type="number" name="mobile" placeholder="Mobile Number" class="form-control login-input">
                                        </div>
                
                                        <div class="form-outline mb-3 mx-3">
                                            <input type="text" placeholder="Address" name="address" class="form-control login-input">
                                        </div>
                                        <div class="form-outline mb-3 mx-3">
                                            <input type="text" placeholder="Locality/Town" name="locality" class="form-control login-input">
                                        </div>
                                        <div class="form-outline mb-3 mx-3">
                                            <input type="number" placeholder="Pincode" name="pincode" class="form-control login-input">
                                        </div>
                                        <div class="form-outline mb-3 mx-3">
                                            <input type="text" placeholder="District" name="district" class="form-control login-input">
                                        </div>
                                        <div class="form-outline mb-3 mx-3">
                                            <input type="text" placeholder="State" name="state" class="form-control login-input">
                                        </div>
                
                                        <div class="d-grid gap-2 mx-3 my-2">
                                            <button class="btn btn-sm login-btn" type="submit">ADD ADDRESS</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </body>  
