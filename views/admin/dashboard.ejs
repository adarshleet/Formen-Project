<%- include('./head.ejs') %>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <main class="row mx-2">
        <%- include('./sideBar.ejs') %>
        <div class="col-md-12 p-4" style="background-color: #F5F5F9;">
            <div class="d-flex justify-content-between align-items-center px-3 w-100 p-2 for-box" style="background-color: #fff;">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-circle-user" style="font-size: 3.5rem;"></i>
                    <h5 class="fw-bold ms-2 pt-1">Admin</h5>
                </div>
                <div>
                    <a href="/admin/logout" class="btn btn-danger fw-bold ">LOGOUT</a>
                </div>
            </div>
            <div class="row p-2 mb-4">
                <div class="col-md-7 p-3">
                    <div class="my-3">
                        <div>
                            <div>
                                <h5 class="fw-bold heads">USERS</h5>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="d-flex flex-column dash-details">
                                    <h5>Total Users</h5>
                                    <h3><%= usersCount %></h3>
                                </div>
                                <div class="d-flex flex-column dash-details">
                                    <h5>Recent Users</h5>
                                    <h3><%= recentUsers %></h3>
                                </div>
                                <div class="d-flex flex-column dash-details">
                                    <h5>Blocked Users</h5>
                                    <h3><%= blockedUsers %></h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="my-3">
                        <div>
                            <div>
                                <h5 class="fw-bold heads">ORDERS</h5>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="d-flex flex-column dash-details">
                                    <h5>Total Orders</h5>
                                    <h3><%= ordersCount %></h3>
                                </div>
                                <div class="d-flex flex-column dash-details">
                                    <h5>Recent Orders</h5>
                                    <h3><%= recentOrders %></h3>
                                </div>
                                <div class="d-flex flex-column text-center dash-details">
                                    <h5>Returns & Cancellations</h5>
                                    <h3><%= returnCount %></h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="my-3">
                        <div>
                            <div>
                                <h5 class="fw-bold heads">FINANCE</h5>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="d-flex flex-column dash-details">
                                    <h5>Total Sales</h5>
                                    <h3>₹<%= totalSales %></h3>
                                </div>
                                <div class="d-flex flex-column dash-details">
                                    <h5>Profit</h5>
                                    <h3>₹<%= totalProfit %></h3>
                                </div>
                                <div class="d-flex flex-column dash-details">
                                    <h5>Refunds</h5>
                                    <h3>₹<%= totalRefund %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="col-md-5 p-3">
                    <div class="mt-3">
                        <div>
                            <h5 class="fw-bold heads">ORDER STATITICS - CATEGORY</h5>
                        </div>
                        <div class="cat-orders p-2" >
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4 sub-heads">CATEGORY</h5>
                                    <h5 class="fw-bold col-md-4 sub-heads">ORDERS</h5>
                                    <h5 class="fw-bold col-md-4 sub-heads">SALES</h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">Jeans</h5>
                                    <h5 class="fw-bold col-md-4"><%= jeansOrdersCount %></h5>
                                    <h5 class="fw-bold col-md-4">₹<%= totalSalesJeans %></h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">Shirt</h5>
                                    <h5 class="fw-bold col-md-4"><%= shirtsOrdersCount %></h5>
                                    <h5 class="fw-bold col-md-4">₹<%= totalSalesShirt %></h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">T-Shirt</h5>
                                    <h5 class="fw-bold col-md-4"><%= tShirtsOrdersCount %></h5>
                                    <h5 class="fw-bold col-md-4">₹<%= totalSalesTShirt %></h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">Cap</h5>
                                    <h5 class="fw-bold col-md-4"><%= capOrdersCount %></h5>
                                    <h5 class="fw-bold col-md-4">₹<%= totalSalesCap %></h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div>
                            <h5 class="fw-bold heads">PRODUCT STATITICS - CATEGORY</h5>
                        </div>
                        <div class="cat-products p-4" >
                            <div>
                                <div class="d-flex justify-content-around align-items-center" style="height: 10rem;">
                                    <div class="text-center">
                                        <h3 class="fw-bold"><%= productsCount %></h3>
                                        <h5 class="fw-bold">TOTAL PRODUCTS</h5>
                                    </div>
                                    <div class="text-center">
                                        <h3 class="fw-bold"><%= stockCount %></h3>
                                        <h5 class="fw-bold">TOTAL STOCK</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4 sub-heads">CATEGORY</h5>
                                    <h5 class="fw-bold col-md-4 sub-heads">PRODUCTS</h5>
                                    <h5 class="fw-bold col-md-4 sub-heads">STOCK</h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">Jeans</h5>
                                    <h5 class="fw-bold col-md-4"><%= jeansCount %></h5>
                                    <h5 class="fw-bold col-md-4"><%= jeansStockCount %></h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">Shirt</h5>
                                    <h5 class="fw-bold col-md-4"><%= shirtCount %></h5>
                                    <h5 class="fw-bold col-md-4"><%= shirtStockCount %></h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">T-Shirt</h5>
                                    <h5 class="fw-bold col-md-4"><%= tShirtCount %></h5>
                                    <h5 class="fw-bold col-md-4"><%= tShirtStockCount %></h5>
                                </div>
                            </div>
                            <div class="my-1">
                                <div class="d-flex text-center">
                                    <h5 class="fw-bold col-md-4">Cap</h5>
                                    <h5 class="fw-bold col-md-4"><%= capCount %></h5>
                                    <h5 class="fw-bold col-md-4"><%= capStockCount %></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-7">
                    <% filteredData.forEach(data=>{%>
                    <input type="text" id="bar-datas-<%= data._id.month %>" hidden value="<%= (data.totalPrice + data.totalWallet) - data.totalCost %>">
                    <%}) %>
                    <div class="bars p-2">
                        <form class="ms-4">
                            <h6 class="m-0 fw-bold">Year</h6>
                            <div class="d-flex">
                                <div class="mx-1">
                                    <input type="radio" <% if(filteredData[0]?._id.year == 2022){%> checked <%} %> name="year" value="2022">
                                    <label for="year">2022</label>
                                </div>
                                <div class="mx-1">
                                    <input type="radio" name="year" <% if(filteredData[0]?._id.year == 2023){%> checked <%} %> value="2023">
                                    <label for="year">2023</label>
                                </div>
                            </div>
                            <button class="btn btn-secondary btn-sm" type="submit">APPLY</button>
                        </form>
                        <div id="chart">
        
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <input type="number" hidden id="cash" value="<%= cashOnDelivery %>">
                    <input type="number" hidden id="prepaid" value="<%= prepaid %>">
                    <input type="number" hidden id="wallet" value="<%= wallet %>">
                    <div class="pieChart p-2">
                        <h6 class="fw-bold">PAYMENT METHODS</h6>
                        <div id="pyChart">

                        </div>
                    </div>
                    <div class="mt-3 p-2 sales-report">
                        <h6 class="fw-bold">SALES REPORT</h6>
                        <form class="px-3" action="/admin/dashboard/sales-report" method="post">
                            <div class="d-flex justify-content-around mb-2">
                                <div>
                                    <h6 class="mb-0">Start Date</h6>
                                    <input type="date" name="startDate" class="form-control">
                                </div>
                                <div>
                                    <h6 class="mb-0">End Date</h6>
                                    <input type="date" name="endDate" class="form-control">
                                </div>
                            </div>

                            <button class="btn btn-secondary w-100 fw-bold mb-1" type="submit">FILTER SALES REPORT</button>
                        </form>
                        <form class="px-3" action="/admin/dashboard/sales-report" method="post">
                            <button class="btn btn-secondary w-100 fw-bold mb-1" type="submit">GET FULL SALES REPORT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/javascript/dashboardBars.js"></script>
<%- include('./foot.ejs') %>
